<?xml version="1.0" encoding="utf-8"?>
<GridLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_row="12"
        android:layout_column="29">

        <Button
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="返回"
            android:id="@+id/button_back"
            android:layout_marginBottom="60dp"
            android:layout_marginEnd="62dp"
            android:layout_alignParentBottom="true"
            android:layout_alignParentEnd="true" />

        <Button
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="保存"
            android:id="@+id/button_save"
            android:layout_alignTop="@+id/button_back"
            android:layout_toStartOf="@+id/button_back"
            android:layout_marginEnd="51dp" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textAppearance="?android:attr/textAppearanceLarge"
            android:text="学生信息添加页面"
            android:id="@+id/textView"
            android:layout_alignParentTop="true"
            android:layout_alignParentStart="true" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textAppearance="?android:attr/textAppearanceMedium"
            android:text="学号："
            android:id="@+id/textView_sno"
            android:layout_marginTop="49dp"
            android:layout_below="@+id/textView"
            android:layout_alignParentStart="true" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textAppearance="?android:attr/textAppearanceMedium"
            android:text="姓名："
            android:id="@+id/textView_sna"
            android:layout_marginTop="46dp"
            android:layout_below="@+id/textView_sno"
            android:layout_alignParentStart="true" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textAppearance="?android:attr/textAppearanceMedium"
            android:text="班级："
            android:id="@+id/textView_class"
            android:layout_below="@+id/textView_sna"
            android:layout_alignParentStart="true"
            android:layout_marginTop="49dp" />

        <EditText
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/editText"
            android:layout_above="@+id/textView_sna"
            android:layout_alignStart="@+id/button_save"
            android:singleLine="true"
            android:numeric="integer"
            android:layout_alignEnd="@+id/button_back" />

        <EditText
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/editText2"
            android:layout_above="@+id/textView_class"
            android:layout_alignStart="@+id/editText"
            android:layout_alignEnd="@+id/editText" />

        <Spinner
            android:layout_width="wrap_content"
            android:layout_height="40dp"
            android:id="@+id/spinner"
            android:layout_alignStart="@+id/editText2"
            android:layout_alignEnd="@+id/editText2"
            android:layout_alignTop="@+id/textView_class" />

    </RelativeLayout>
</GridLayout>
